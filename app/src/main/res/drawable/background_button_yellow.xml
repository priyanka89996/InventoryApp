<?xml version="1.0" encoding="UTF-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape android:shape="rectangle">
                    <!--<solid android:color="#60000000" />-->
                    <gradient
                        android:startColor="#992e3436"
                        android:endColor="#D6D6D6"
                        android:angle="270" />
                    <!-- alttan gölge -->
                    <corners android:radius="200dp" />
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item android:bottom="3px">
                <shape>
                    <stroke android:width="1dp" android:color="@color/purple_500" />
                    <padding android:bottom="@dimen/margin10" android:left="@dimen/margin10" android:right="@dimen/margin10" android:top="@dimen/margin10" />
                    <solid android:color="@color/purple_500" />
                    <corners android:radius="200dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
