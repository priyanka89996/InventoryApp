<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin10"
    android:background="@drawable/round_button"
    android:elevation="@dimen/margin10"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin10"
    app:cardElevation="@dimen/margin10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="150dp"
            android:layout_height="142dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="Prodct Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_medium"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivDisplayVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_baseline_ondemand_video_24"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvWholesalePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wholesalePrice"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/tvRetailPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/retailPrice"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_normal" />

            <ImageView
                android:id="@+id/ivRedFlag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/low_stock" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>